
%h2
  = @conversation.subject
  with
  =@receiver.name
%small
  Conversations started......  
#conv_message  
  - @receipts.each do |r|
    %p
      =r.message.sender.name
      %b
        =r.message.body
    %p
    =r.created_at
  
%h3 
  Reply
#conv_message_form
  = simple_form_for :message, url: [:reply, current_user, @conversation], :remote => true do |f|
    =f.input :body
    .form-actions
      =f.button :submit
      = submit_tag 'Cancel', type: :reset

